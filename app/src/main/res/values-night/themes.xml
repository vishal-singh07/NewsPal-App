<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsPal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#ED0000</item>
        <item name="colorPrimaryVariant">#ED0000</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#B72B2B2B</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.CustomSplashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/red</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="android:windowSplashScreenBrandingImage" tools:ignore="NewApi">@drawable/brand2</item>
        <item name="postSplashScreenTheme">@style/Theme.NewsPal</item>
    </style>
</resources>